<?xml version="1.0" encoding="UTF-8"?>
<config-template xmlns="http://tail-f.com/ns/config/1.0">
   <devices xmlns="http://tail-f.com/ns/ncs">
      <device>
         <name>{$DEVICE}</name>
         <config>
            <ip xmlns="urn:ios">
               <access-list>
                  <extended>
                     <ext-named-acl>
                        <name>{$ACL_NAME}</name>
                        <ext-access-list-rule>
                           <rule>{$ACL_RULE}</rule>
                        </ext-access-list-rule>
                     </ext-named-acl>
                  </extended>
               </access-list>
            </ip>
         </config>
      </device>
   </devices>
</config-template>
